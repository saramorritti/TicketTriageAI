@page
@model TicketTriageAI.Dashboard.Pages.Tickets.DetailModel

@if (Model.Ticket is null)
{
    <p>Not found</p>
    return;
}

<h1>@Model.Ticket.Subject</h1>

<p><b>MessageId:</b> @Model.Ticket.MessageId</p>
<p><b>From:</b> @Model.Ticket.From</p>
<p><b>ReceivedAt:</b> @Model.Ticket.ReceivedAt</p>

<p><b>Category:</b> @Model.Ticket.Category</p>
<p><b>Severity:</b> @Model.Ticket.Severity</p>
<p><b>Confidence:</b> @Model.Ticket.Confidence</p>

<p><b>Status:</b> @Model.Ticket.Status (@Model.Ticket.StatusReason)</p>

<h3>Body</h3>
<pre style="white-space:pre-wrap">@Model.Ticket.Body</pre>

<h3>Raw Message</h3>
<details>
    <summary>show</summary>
    <pre style="white-space:pre-wrap">@Model.Ticket.RawMessage</pre>
</details>
